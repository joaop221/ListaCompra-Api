{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.Async", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": { "pathFormat": "Logs/log-{Date}.txt" }
            },
            {
              "Name": "MSSqlServer",
              "Args": {
                "connectionString": "Default",
                "tableName": "Logs",
                "autoCreateSqlTable": true,
                "restrictedToMinimumLevel": "Information",
                "batchPostingLimit": 1000,
                "period": 30,
                "columnOptionsSection": {
                  "disableTriggers": true,
                  "clusteredColumnstoreIndex": false,
                  "primaryKeyColumnName": "Id",
                  "addStandardColumns": [ "LogEvent" ],
                  "removeStandardColumns": [ "Properties" ],
                  "additionalColumns": [
                    {
                      "ColumnName": "UsuarioId",
                      "DataType": "nvarchar(500)",
                      "AllowNull": false
                    }
                  ],
                  "id": { "nonClusteredIndex": true },
                  "level": {
                    "columnName": "Severidade",
                    "storeAsEnum": true
                  },
                  "timeStamp": {
                    "columnName": "DataHora",
                    "convertToUtc": true
                  },
                  "logEvent": {
                    "columnName": "Propriedade",
                    "excludeAdditionalProperties": true,
                    "excludeStandardColumns": true
                  },
                  "message": { "columnName": "Mensagem" },
                  "exception": { "columnName": "Excecao" },
                  "messageTemplate": { "columnName": "Template" }
                }
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SafeTemplateName"
    }
  },

  "ChaveJwt": "oND97VRYafpdJqbfSzqeLnwk+Q/atQPRFOLF90MIdGw=",
  "JwtIssuer": "ourhome.com",
  "DiasExpiracaoJwt": 1
}